---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Rooso Inc - Building Roofs, Building Trust">
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="relative h-screen flex items-center justify-center text-white px-4">
      <div class="absolute inset-0 bg-rooso-gray opacity-95"></div>
      <div class="relative z-10 text-center max-w-4xl mx-auto">
        <div class="mb-8">
          <img src="/logo.png" alt="Rooso Inc Logo" class="h-24 mx-auto mb-4">
          <h1 class="text-5xl font-bold mb-4">ROOSO INC</h1>
          <p class="text-2xl text-rooso-green font-semibold">BUILDING ROOFS, BUILDING TRUST</p>
        </div>
        <a href="#contact" class="inline-block bg-rooso-green text-rooso-gray font-semibold px-8 py-3 rounded-lg hover:bg-opacity-90 transition-all">
          Get a Free Quote
        </a>
      </div>
    </section>

    <!-- Services Section -->
    <section class="py-20 bg-white" id="services">
      <div class="max-w-6xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-center text-rooso-gray mb-12">Our Services</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="bg-gray-50 p-6 rounded-lg">
            <h3 class="text-xl font-semibold text-rooso-gray mb-4">Residential Roofing</h3>
            <p class="text-gray-600">Expert installation and repair services for homes of all sizes.</p>
          </div>
          <div class="bg-gray-50 p-6 rounded-lg">
            <h3 class="text-xl font-semibold text-rooso-gray mb-4">Commercial Roofing</h3>
            <p class="text-gray-600">Comprehensive solutions for businesses and commercial properties.</p>
          </div>
          <div class="bg-gray-50 p-6 rounded-lg">
            <h3 class="text-xl font-semibold text-rooso-gray mb-4">Emergency Repairs</h3>
            <p class="text-gray-600">24/7 emergency repair services when you need them most.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="py-20 bg-rooso-gray text-white" id="contact">
      <div class="max-w-4xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">Contact Us</h2>
        <div class="bg-white text-rooso-gray p-8 rounded-lg">
          <div class="text-center">
            <h3 class="text-2xl font-semibold mb-4">Get Your Free Quote Today</h3>
            <p class="text-gray-600 mb-6">Call us or fill out our contact form to get started</p>
            <a href="tel:+1234567890" class="inline-block bg-rooso-green text-white font-semibold px-8 py-3 rounded-lg hover:bg-opacity-90 transition-all mb-4">
              (123) 456-7890
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-rooso-gray text-white py-8">
      <div class="max-w-6xl mx-auto px-4 text-center">
        <p>&copy; {new Date().getFullYear()} Rooso Inc. All rights reserved.</p>
      </div>
    </footer>
  </main>
</Layout>